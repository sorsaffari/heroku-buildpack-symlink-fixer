#!/usr/bin/env bash

set -x

ls

export BUILDPACK_DIR=$(pwd)
export REALPATH="$(dirname "$0")/realpath"
export BUILD_DIR="$("$REALPATH" "$1")"
export RUNTIME_DIR="/app/"

originals=$(find $BUILDPACK_DIR/docs/ -name '*.yml')

for original in $originals; do
    symlink=${original#'$BUILDPACK_DIR/docs/'}; # remove prefix
    symlink=${symlink:4} # remove page number
    symlink="${symlink/references\//}" # remove /references
    symlink="${symlink//-/_}" # repalce - with _
    symlink="/$BUILD_DIR/_data/$symlink"
    ln -s $original $symlink
done
# #!/usr/bin/env bash

